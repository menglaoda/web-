*{
	margin: 0;
	padding: 0;
}
.box1{
	height: 519px;
	position: relative;
	background: url(../img/ia_100000002.jpg) 0px center/cover;
}
.box1:before{
	content: "";
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.3);
}
.logo{
	width: 60px;
	z-index: 10;
	position: absolute;
	top: 20px;
	left: 40px;
}
.box1-txt{
	font-size: 26px;
	width: 100%;
	color: white;
	height: 30px;
	line-height: 30px;
	text-align: center;
	position: absolute;
	top: 50%;
	left: 0px;
	margin-top: -15px;
	letter-spacing: 2px;
}
.box2{
	text-align: center;
	padding: 108px 0px 100px;
}
.box2 h3{
	font-size: 24px;
	font-weight: 500;
}
.box2 p{
	width: 440px;
	color: rgb(51, 51, 51);
	font-size: 13px;
	line-height: 26px;
	margin: 30px auto 0px;
}
.box3{
	background: #efefef;
	padding: 108px 0px 100px;
}
.box3 h3{
	font-size: 24px;
	font-weight: 500;
	text-align: center;
}
.box3-list{
	width: 1124px;
	margin: 70px auto 0px;
	list-style: none;
	position: relative;
	overflow: hidden;	
}
.box3-list h4{
	font-size: 18px;
	font-weight: 500;
	margin-bottom: 10px;
	text-align: center;
}
.box3-list p{
	font-size: 13px;
	line-height: 26px;
	color: rgb(51, 51, 51);
}
.box3-list li{
	width: 310px;
}
.box3-list li:first-child{
	float: left;
}
.box3-list li:nth-child(2){
	position: absolute;
	top: 0px;
	left: 50%;
	margin-left: -155px;
}
.box3-list li:last-child{
	float: right;
}
.box4{
	background: url(../img/ia_100000004.jpg) center/100% ;
	padding: 140px 0px 135px;
	position: relative;
}
.box4:before{
	content: "";
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
}
.box4 h3{
	font-size: 24px;
	color: white;
	font-weight: 500;
	text-align: center;
	position: relative;
	z-index: 10;
}
.box4 a{
	width: 195px;
	height: 60px;
	background: #51ba92;
	color: white;
	display: block;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
	margin: 45px auto 0px;
	position: relative;
	z-index: 10;
}
.box5{
	background: #282828;
	text-align: center;
	font-size: 0px;
	padding: 105px 0px 82px;
}
.box5 h3{
	font-size: 16px;
	color: white;
	font-weight: 500;
}
.box5 p{
	color: rgb(153, 153, 153);
	font-size: 13px;
	line-height: 26px;
}
.box5 a{
	color: rgb(81, 186, 146);
	display: block;
	font-size: 15px;
	margin: 27px 0px 7px;
}
.box5 img{
	margin: 0px 8px;
}
